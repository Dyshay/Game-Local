<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Game.Views"
        xmlns:viewmodel="clr-namespace:Game.ViewModels"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" DataContext="{StaticResource Main}" WindowState="Maximized" Background="Black" Style="{DynamicResource MainWindowStyle}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:HomeViewModel}">
            <view:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:ConnectViewModel}">
            <view:ConnectView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:GameViewModel}">
            <view:GameView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:RegisterViewModel}">
            <view:RegisterView/>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="Black">
            <Image Source="http://hdwallpaperfx.com/wp-content/uploads/2015/10/anonymous-wallpaper.jpg"/>
        <ContentControl Content="{Binding CurrentView}"></ContentControl>
    </Grid>
</Window>
